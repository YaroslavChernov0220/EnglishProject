<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.AddingTestFragment">

    <LinearLayout
        android:id="@+id/l_adding_adding_layout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="Вопрос:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <EditText
            android:autofillHints="question"
            android:hint="Введите вопрос"
            android:id="@+id/adding_test_question"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:fontFamily="@font/wellfleet"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:labelFor="@id/text_ans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="0dp"
            android:text="Ответы (отметьте правильный):"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_adding_test"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/l_adding_adding_layout"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_1_adding"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/wellfleet"
            android:layout_height="wrap_content"/>

        <EditText
            android:hint="Вопрос 1"
            android:id="@+id/adding_test_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="answer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_2_adding"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/wellfleet"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/adding_test_2"
                android:hint="Вопрос 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="answer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_3_adding"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/wellfleet"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/adding_test_3"
                android:hint="Вопрос 3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="answer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_4_adding"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/wellfleet"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/adding_test_4"
                android:hint="Вопрос 4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="answer" />

        </LinearLayout>

    </RadioGroup>

    <Button
        android:id="@+id/button_share_test"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/gray"
        android:text="Share"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="4dp"
        tools:ignore="HardcodedText" />



</androidx.constraintlayout.widget.ConstraintLayout>